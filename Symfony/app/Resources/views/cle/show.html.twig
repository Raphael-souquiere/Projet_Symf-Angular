{% include 'base.html.twig' %}
{% block body %}


<link rel="stylesheet" href="{{ asset('css/style_cle_show.css') }}" type="text/css"/>

    <h1>CLé n°{{cle.numCle}}</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cle.id }}</td>
            </tr>
            <tr>
                <th>Commentaire</th>
                <td>{{ cle.commentaire }}</td>
            </tr>
            <tr>
                <th>Numéro de clé</th>
                <td>{{ cle.numCle }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{% if cle.dateCreation %}{{ cle.dateCreation|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Date d'arret</th>
                <td>{% if cle.dateArret %}{{ cle.dateArret|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Creation</th>
                <td>{% if cle.created %}{{ cle.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Update</th>
                <td>{% if cle.updated %}{{ cle.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Montant Initial</th>
                <td>{{ cle.montantInitial }} €</td>
            </tr>
            <tr>
                <th>Etat</th>
                {% if cle.etat == 'Active' %}
                    <td style="background-color:green;">{{ cle.etat }}</td>
                {% else %}
                    <td style="background-color:red;">{{ cle.etat }}</td>
                {% endif %}
                <td>
            </tr>
        </tbody>
    </table>
    <br>
    <a href="{{ path('cle_edit', { 'id': cle.id }) }}"><input id="boutton" type="button" value="Modifier cette clé"></a>
    <br><br>
    <a href="{{ path('cle_index') }}"><input id="boutton" type="button" value="Revenir a la liste"></a>
{% endblock %}
{% include 'footer.html.twig' %}
