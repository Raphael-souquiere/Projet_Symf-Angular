{% include 'base.html.twig' %}

{% block body %}
    <link rel="stylesheet" href="{{ asset('css/style_etat.css') }}" type="text/css"/>

    <h1>Edition du site : {{site.site}}</h1>

    <div id="container">

    {{ form_start(edit_form) }}
    <div class="form-box">
        <div class="form-label">
            {{ form_label(edit_form.site) }} :
        </div>
        <div class="form-widget">
            {{ form_widget(edit_form.site) }}
        </div>
    </div>

    </div>

    <div class="form-box">
        <input id="boutton" type="submit" value="Modifier" />
        {{ form_end(edit_form) }}
    </div>
    <br>
    <div class="form-box">
        {{ form_start(delete_form) }}
        <input id="boutton" type="submit" value="Supprimer ce site" onclick="if(!confirm('Etes vous sure de vouloir supprimer ce site ?')) { return false; }" >
        {{ form_end(delete_form) }}
    </div>

        <br>
        <a href="{{ path('site_index') }}"><input id="boutton" type="button" value="Revenir a la liste"></a>
{% endblock %}
{% include 'footer.html.twig' %}
