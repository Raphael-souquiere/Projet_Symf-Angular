{% include 'base.html.twig' %}
{% block body %}
    <h1>Liste des Utilisateurs</h1>
    <table class="list">
        <thead>
            <tr>
                <th>Identifiant</th>
                <th>nom</th>
                <th>prenom</th>
                <th>actif</th>
                <th>Creation</th>
                <th>Update</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.actif }}</td>
                <td>{% if user.created %}{{ user.created|date('d/m/Y') }}{% endif %}</td>
                <td>{% if user.updated %}{{ user.updated|date('d/m/Y') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('user_show', { 'id': user.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('user_edit', { 'id': user.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('user_new') }}">Cr√©er un nouvel utilisateur</a>
        </li>
    </ul>
{% endblock %}
