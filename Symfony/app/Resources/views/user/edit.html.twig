{% include 'base.html.twig' %}

{% block body %}

<link rel="stylesheet" href="{{ asset('css/style_user.css') }}" type="text/css"/>

    <h1>Modifier un utilisateur</h1>

    <div id="container">

    {{ form_start(edit_form) }}
    <div class="form-box">
        <div class="form-label">
            {{ form_label(edit_form.nom) }} :
        </div>
        <div class="form-widget">
            {{ form_widget(edit_form.nom) }}
        </div>
    </div>

    <div class="form-box">
        <div class="form-label">
            {{ form_label(edit_form.prenom) }} :
        </div>
        <div class="form-widget">
            {{ form_widget(edit_form.prenom) }}
        </div>
    </div>

    <div class="form-box">
        <div class="form-label">
            {{ form_label(edit_form.actif) }} :
        </div>
        <div class="form-widget">
            {{ form_widget(edit_form.actif) }}
