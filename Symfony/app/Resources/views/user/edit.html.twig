    </div>

    <div class="form-box">
        <div class="form-label">
            {{ form_label(edit_form.idSite) }} :
        </div>
        <div class="form-widget">
            {{ form_widget(edit_form.idSite) }}
        </div>
    </div>

    <div class="form-box">
        <div class="form-label">
            {{ form_label(edit_form.idTypeUser) }} :
