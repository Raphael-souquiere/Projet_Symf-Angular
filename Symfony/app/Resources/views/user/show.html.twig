{% include 'base.html.twig' %}
{% block body %}

<link rel="stylesheet" href="{{ asset('css/style_user_show.css') }}" type="text/css"/>

    <h1>DÃ©tails de l'utilisateur : {{user.prenom}} {{user.nom}}</h1>

    <div class="container">

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>Actif</th>
              <td>{% if user.actif %}Oui{% else %}Non{% endif %}</td>
            </tr>
            <tr>
                <th>Creation</th>
                <td>{% if user.created %}{{ user.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Mise a jour</th>
                <td>{% if user.updated %}{{ user.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Type d'Utilisateur</th>
                <td>{{ user.typeUser }}</td>
            </tr>
              <th>Site</th>
              <td>{{ user.site }}</td>
            <tr>


        </tbody>
    </table>
    <br>
    <a href="{{ path('user_index') }}"><input id="boutton" type="button" value="Revenir a la liste"></a>
    <br><br>
    <a href="{{ path('user_edit', { 'id': user.id }) }}" > <input id="boutton" type="button" value="Modifier"></a>

    </div>

{% endblock %}
